extends layout

block content
  h1= title
  p Welcome to #{title} This is sunnith
  button(type="button", class="btn btn-secondary" onclick="goFaster()") Press Me for the contents
  div(id="faster") Increase the speed
  a(href='http://localhost:3000/book') Click to go to the book search page
  script.
    var mph = 20;
    var change = 1;
    
    function goFaster(){
      mph += change;
      change += 1;
      document.getElementById("faster").innerHTML = "MPH " + mph +" with change " + change;
    }